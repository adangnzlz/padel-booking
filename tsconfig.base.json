{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@booking/api": ["apps/booking-api/src"],
      "@booking/api/*": ["apps/booking-api/src/*"],
      "@booking/web": ["apps/booking-web-app/src"],
      "@booking/web/*": ["apps/booking-web-app/src/*"]
    }
  }
}
